<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DailyFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tesfr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="Friends List"
        android:textSize="20dp"
        android:textColor="@color/ungu"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyleviewfl"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:outlineSpotShadowColor="@color/ungu"
        tools:listitem="@layout/dailyitem"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
        <TextView
            android:id="@+id/tesact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Activity"
            android:textSize="20dp"
            android:textColor="@color/ungu"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyleviewf2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:outlineSpotShadowColor="@color/ungu"
            tools:listitem="@layout/dailyactivityitem"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</FrameLayout>